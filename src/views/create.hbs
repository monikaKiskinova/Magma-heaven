        <section id="create-container">
            <div class="create-container-info">
                <h1>Create Volcano Wiki</h1>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{volcano.name}}" placeholder="...">
                    <label>Location:</label>
                    <input type="text" id="location" name="location" value="{{volcano.location}}" placeholder="...">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" value="{{volcano.elevation}}" placeholder="...">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" value="{{volcano.lastEruption}}" placeholder="...">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{volcano.image}}" placeholder="http://...">
                    <label>Volcano Type:</label>
                                        
                    {{>volcanoTypeSelected}}
                    
                    <label>Description:</label>
                    <textarea id="description" name="description" value="{{volcano.description}}" placeholder="..."></textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>
